<div id="left_column">
	<%= render :partial => 'avatar/sidebar_box' %>
	<%= render :partial => 'contact_box' %>
	<%= render :partial => 'faq/sidebar_box', :collection => Faq::FAVORITES %>
</div>
<div id="main_content">
	<div id="full_name">
		<%= h @spec.full_name.or_else(@user.screen_name) %>
	</div>
	<div id="occupation">
		<%= h @spec.occupation.or_else("Your Occupation") %>
	</div>
	<div id="location">
		<%= h @spec.location.or_else("Your Location") %>
	</div>
	
	<hr noshade />
	Profile URL: <%= link_to profile_for(@user), profile_for(@user) %>
	<hr noshade />
	
	My Bio:
	<div id="bio" class="faq_answer">
		<%= sanitize @faq.bio %>
	</div>
	Friends:
	<%= render :partial => "friendship/friends" %>
	<% unless @blog.posts.empty? %>
		<hr noshade />
		Blog: <%= render :partial => "blog" %>
	<% end %>
</div>